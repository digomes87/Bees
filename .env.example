# Environment Configuration for Bee Migration Analysis Project
# Copy this file to .env and update the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, testing, production)
APP_ENV=development

# Application name and version
APP_NAME="Bee Migration Analysis"
APP_VERSION=1.0.0

# Debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=logs/app.log

# =============================================================================
# API SETTINGS
# =============================================================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# API base URL
API_BASE_URL=http://localhost:8000

# API documentation settings
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8888

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL settings (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bee_migration
DB_USER=beeuser
DB_PASSWORD=beepassword
DB_URL=postgresql://beeuser:beepassword@localhost:5432/bee_migration

# SQLite settings (current)
SQLITE_DB_PATH=data/bee_migration.db

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Cache settings
CACHE_TTL=3600
CACHE_PREFIX=bee_migration:

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================

# Weather API settings
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# GBIF API settings
GBIF_API_URL=https://api.gbif.org/v1
GBIF_USERNAME=your_gbif_username
GBIF_PASSWORD=your_gbif_password

# NASA API settings
NASA_API_KEY=your_nasa_api_key_here
NASA_API_URL=https://api.nasa.gov

# WorldClim API settings
WORLDCLIM_API_URL=https://www.worldclim.org/data

# =============================================================================
# FILE PATHS
# =============================================================================

# Data directories
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
EXTERNAL_DATA_DIR=data/external

# Output directories
RESULTS_DIR=results
IMAGES_DIR=images
REPORTS_DIR=results/reports
MODELS_DIR=results/models

# Temporary directories
TEMP_DIR=temp
CACHE_DIR=.cache

# =============================================================================
# MACHINE LEARNING SETTINGS
# =============================================================================

# Model settings
MODEL_RANDOM_STATE=42
MODEL_TEST_SIZE=0.2
MODEL_CV_FOLDS=5

# Training settings
TRAINING_EPOCHS=100
TRAINING_BATCH_SIZE=32
TRAINING_LEARNING_RATE=0.001

# Model persistence
MODEL_SAVE_PATH=results/models
MODEL_CHECKPOINT_INTERVAL=10

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================

# Plot settings
PLOT_DPI=300
PLOT_FORMAT=png
PLOT_STYLE=seaborn-v0_8
PLOT_FIGSIZE_WIDTH=12
PLOT_FIGSIZE_HEIGHT=8

# Color settings
PLOT_COLOR_PALETTE=viridis
PLOT_BACKGROUND_COLOR=white

# =============================================================================
# DASHBOARD SETTINGS
# =============================================================================

# Streamlit settings
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_THEME_PRIMARY_COLOR=#1f77b4
STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff

# Dashboard refresh interval (seconds)
DASHBOARD_REFRESH_INTERVAL=300

# =============================================================================
# JUPYTER SETTINGS
# =============================================================================

# Jupyter notebook settings
JUPYTER_PORT=8888
JUPYTER_IP=0.0.0.0
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for sessions (generate a secure random string)
SECRET_KEY=your_secret_key_here_change_this_in_production

# JWT settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Prometheus settings
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana settings
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Parallel processing
N_JOBS=-1
PARALLEL_BACKEND=threading

# Memory settings
MAX_MEMORY_USAGE_GB=8
CHUNK_SIZE=10000

# Caching
ENABLE_CACHING=true
CACHE_SIZE_MB=512

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development tools
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false

# Testing settings
TEST_DATABASE_URL=sqlite:///test_bee_migration.db
TEST_DATA_DIR=tests/data

# Code quality
ENABLE_TYPE_CHECKING=true
ENABLE_LINTING=true

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Docker compose settings
COMPOSE_PROJECT_NAME=bee-migration
COMPOSE_FILE=docker-compose.yml

# Container settings
CONTAINER_TIMEZONE=UTC
CONTAINER_LOCALE=en_US.UTF-8

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup settings
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Slack settings (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#bee-migration

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
ENABLE_REAL_TIME_ANALYSIS=false
ENABLE_ADVANCED_ML_MODELS=true
ENABLE_GEOSPATIAL_ANALYSIS=true
ENABLE_CLIMATE_INTEGRATION=true
ENABLE_API_ENDPOINTS=true
ENABLE_DASHBOARD=true
ENABLE_EXPORT_FEATURES=true

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false