[run]
# Coverage configuration for Bee Migration Analysis Project

# Source code directory
source = src

# Include patterns
include = 
    src/*
    tests/*

# Exclude patterns
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */.venv/*
    */.env/*
    */site-packages/*
    */migrations/*
    */settings/*
    */config/*
    */manage.py
    */setup.py
    */conftest.py
    */.tox/*
    */build/*
    */dist/*
    */.git/*
    */.pytest_cache/*
    */htmlcov/*
    */docs/*
    */notebooks/*
    */examples/*
    */scripts/*
    */data/*
    */images/*
    */results/*
    */temp/*
    */tmp/*

# Branch coverage
branch = True

# Parallel processing
parallel = True

# Data file
data_file = .coverage

# Concurrency
concurrency = 
    thread
    multiprocessing

[report]
# Reporting options

# Show missing lines
show_missing = True

# Skip covered files
skip_covered = False

# Skip empty files
skip_empty = True

# Sort by coverage percentage
sort = Cover

# Precision for percentages
precision = 2

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if 0:
    if False:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Don't complain about type checking imports
    if TYPE_CHECKING:
    
    # Don't complain about platform specific code
    if sys.platform
    
    # Don't complain about deprecated code
    @deprecated
    
    # Don't complain about logging
    logger\.
    logging\.
    
    # Don't complain about pass statements
    pass
    
    # Don't complain about ellipsis
    \.\.\.

# Ignore errors
ignore_errors = True

# Partial branches to ignore
partial_branches =
    pragma: no branch
    if 0:
    if False:
    if __name__ == .__main__.:

[html]
# HTML report options

# Output directory
directory = htmlcov

# Title
title = Bee Migration Analysis Coverage Report

# Show contexts
show_contexts = True

# Skip covered files in HTML
skip_covered = False

# Skip empty files in HTML
skip_empty = True

[xml]
# XML report options

# Output file
output = coverage.xml

# Package depth
package_depth = 2

[json]
# JSON report options

# Output file
output = coverage.json

# Show contexts
show_contexts = True

# Pretty print
pretty_print = True

[paths]
# Path mapping for different environments

source =
    src/
    */site-packages/
    */lib/python*/site-packages/
    */lib64/python*/site-packages/
    */Lib/site-packages/
    */lib/python*/dist-packages/